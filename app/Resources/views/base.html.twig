<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Click and Cheers{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.css')}}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css')}}">
            <link rel="stylesheet" href="{{ asset('css/jquery-UI.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <style type="text/css">
            @-moz-document url-prefix() {
                select{
                    -moz-appearance: none;
                    background: url("../../img/arrow.png") no-repeat scroll right transparent;
                    background-size: 11px;
                    padding-right:10px;
                }
            }
        </style>
    </head>
    <body onmousemove="souris(event);" class="load">
        {% block navbar %}
            {% include '::navbar.html.twig' %}
        {% endblock navbar %}
        
        <div class="mainContainer">
        {% block body %}{% endblock %}
        </div>
        
        {% block footer %}
            {% include '::footer.html.twig' %}
        {% endblock footer %}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-2.1.0.js') }}" type="text/javascript" /></script>
            <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}" type="text/javascript" /></script>
            <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('js/function.js') }}" type="text/javascript" /></script>
        {% endblock %}

        
    </body>
</html>
