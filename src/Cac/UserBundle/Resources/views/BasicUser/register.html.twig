{% extends '::base.html.twig' %}

{% block body -%}
    <div class="formBar col-xs-12 col-sm-12 col-md-12 noPadding">
		<h1>Inscrivez vous</h1>
		<div class="separation1"></div>
		<div class="separation2"></div>
	</div>
	<div class="subtitlePageRegisterBig">
		<p>Votre profil</p>
	</div>

    {% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('user_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register col-xs-12 col-sm-12 col-md-12">
	
	<div class="inscription center col-xs-6 col-sm-6 col-md-6">
		{{ form_errors(form.gender) }}
		{{ form_widget(form.gender) }}
		<br>
	    {{ form_label(form.name) }}
	    <br>
		{{ form_errors(form.name) }}
		{{ form_widget(form.name) }}
		<br>
		<br>
		{{ form_label(form.firstname) }}
		<br>
		{{ form_errors(form.firstname) }}
		{{ form_widget(form.firstname) }}
		<br>
		<br>
		<br>
		<br>
		<br>
		{{ form_label(form.mobile_phone) }}
		<br>
		{{ form_errors(form.mobile_phone) }}
		{{ form_widget(form.mobile_phone) }}
		<br>
		<br>
		{{ form_label(form.fix_phone) }}
		<br>
		{{ form_errors(form.fix_phone) }}
		{{ form_widget(form.fix_phone) }}
		
	</div>

	<div class="inscription center col-xs-6 col-sm-6 col-md-6">
		{{ form_label(form.email.first) }}
		<br>
		{{ form_errors(form.email.first) }}
		{{ form_widget(form.email.first) }}
		<br>
		<br>
		{{ form_label(form.email.second) }}
		<br>
		{{ form_errors(form.email.second) }}
		{{ form_widget(form.email.second) }}
		<br>
		<br>
		<br>
		{{ form_label(form.plainPassword.first) }}
		<br>
		{{ form_errors(form.plainPassword.first) }}
		{{ form_widget(form.plainPassword.first) }}
		<br>
		<br>
		{{ form_label(form.plainPassword.second) }}
		<br>
		{{ form_errors(form.plainPassword.second) }}
		{{ form_widget(form.plainPassword.second) }}

		{{ form_widget(form._token) }}
		
	</div>
	<div class="inscription center col-xs-12 col-sm-12 col-md-12">
        <input type="submit" value="Valider">
    </div>

    
</form>

{% endblock %}
