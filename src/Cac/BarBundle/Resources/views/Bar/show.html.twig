{% block title %}CacBarBundle:Bar:show{% endblock %}

{% block body %}
		<div class="topBar col-xs-12 col-sm-12 col-md-12 noPadding">
			<img src="{{ asset('uploads/bar/'~bar.path) }}">
			<!--<img src="{{asset('img/accueil.png')}}" alt="">
			<img src="{{asset('img/pershing.png')}}" alt="">
			<img src="{{asset('img/fondFicheBar.png')}}" alt="">-->
			<div class="infoNameBar">
				<h1>{{ bar.name }}</h1>
				{% if bar.priceRange ==  1 %}
				<p>€<span>€€€€</span></p>
				{% elseif bar.priceRange ==  2 %}
				<p>€€<span>€€€</span></p>
				{% elseif bar.priceRange ==  3 %}
				<p>€€€<span>€€</span></p>
				{% elseif bar.priceRange ==  4 %}
				<p>€€€€<span>€</span></p>
				{% else %}
				<p>€€€€€</p>
				{% endif %}
			</div>
		</div>
		<div class="infoBar col-xs-12 col-sm-12 col-md-12 noPadding">
			<div class="noteBar col-xs-3 col-sm-3 col-md-3">
