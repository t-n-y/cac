{% extends "::basepro.html.twig" %}

{% block title %}CacBarBundle:Bar:show{% endblock %}

{% block body %}
		<div class="topBar col-xs-12 col-sm-12 col-md-12 noPadding">
			<img src="{{ asset('uploads/bar/'~bar.path) }}">
			<!--<img src="{{asset('img/accueil.png')}}" alt="">
			<img src="{{asset('img/pershing.png')}}" alt="">
			<img src="{{asset('img/fondFicheBar.png')}}" alt="">-->
			<div class="infoNameBar">
				<h1>{{ bar.name }}</h1>
			</div>
		</div>

		<div class="onglets col-xs-12 col-sm-12 col-md-12 noPadding">
			<div class="onglet ongletVerresOffert col-xs-6 col-sm-6 col-md-6 noPadding">
				<p>GESTION DES VERRES OFFERTS</p>
			</div>
			<div class="onglet ongletVerresPromotion col-xs-6 col-sm-6 col-md-6 noPadding">
				<p>GESTION DES PROMOTIONS</p>
			</div>
		</div>

		<div class="contentSuperInfoBar col-xs-12 col-sm-12 col-md-12 noPadding">
			<div class="superInfoBar noPadding">
				<div class="ongletBarJour">
					{% set days = {
							'1': 'Lundi', 
							'2': 'Mardi', 
							'3': 'Mercredi', 
							'4': 'Jeudi', 
							'5': 'Vendredi', 
							'6': 'Samedi', 
							'7': 'Dimanche'
					} %}
					{% for i in 1..7 %}
						<div class="informationJour {{ days[i] }}">
							<h3>{{ days[i] }}</h3>
						</div>
					{% endfor %}
				</div>
				<div class="informationBar">
					<div class="gestion gestionVerreOffert col-xs-12 col-sm-12 col-md-12">
						<h2>Nombres de verres disponibles à l'offre</h2>
						<select class="promotion-qt-picker height40" data-day="{{ today }}">
							{% set nbVerreOffert = {
								'1': 'Illimité',
								'2': '5', 
								'3': '10', 
								'4': '20', 
								'5': '30', 
								'6': '40',
								'7': '50',
								'8': '100'
								
							} %}
							{% for k in 1..8 %}
							<option value="{{nbVerreOffert[k]}}">{{nbVerreOffert[k]}}</option>
							{% endfor %}
						</select>
						<p class="padding40">Condition*</p>
						<select>
							{% set conditionVerreOffert = {
								'1': ['aucune','Aucune'], 
								'2': ['accompagne','Venir accompagné'],
								'3': ['noChampagneAndLuxe','Hors champagne et alcools de luxe'],
							} %}

							{% for k in 1..3 %}
							<option value="{{conditionVerreOffert[k][0]}}">{{conditionVerreOffert[k][1]}}</option>
							{% endfor %}
						</select>


						<h2>Validité des verres offerts</h2>
						
						<select class="promotion-qt-picker height40">
							{% set tmpVerreOffert = {
								'1': 'Illimité',
								'2': '1 semaine', 
								'3': '2 semaines', 
								'4': '3 semaines', 
								'5': '1 mois', 
								'6': '2 mois',
							} %}
							{% for k in 1..6 %}
							<option value="{{tmpVerreOffert[k]}}">{{tmpVerreOffert[k]}}</option>
							{% endfor %}
						</select>
					</div>

					<div class="gestion gestionPromotion col-xs-12 col-sm-12 col-md-12">
						<h2>Vos promotions</h2>
						<div class="col-xs-6 col-sm-6 col-md-6">
							<select class="promotion-qt-picker height40" data-day="{{ today }}">
								<option value="{{ bar.promotion.promotionArray[today].promotion.value }}">{{ bar.promotion.promotionArray[today].promotion.value }}%</option>
									{% for i in 2..6 %}
									    <option value="{{i}}0">{{i}}0%</option>
									{% endfor %}
							</select>
						</div>
						
						<div class="center col-xs-6 col-sm-6 col-md-6">
							<p>En distribuer au maximum</p>
							<input value="{{ bar.promotion.promotionArray[today].promotion.quantity }}"/> pour ce jour
							<br>
							<br>
							<p>Condition*</p>
							<select>
								{% set conditionPromo = {
									'1': ['aucune','Aucune'], 
									'2': ['accompagne','Venir accompagné'],
									'3': ['noChampagneAndLuxe','Hors champagne et alcools de luxe'],
								} %}

								{% for k in 1..3 %}
								<option value="{{conditionPromo[k][0]}}">{{conditionPromo[k][1]}}</option>
								{% endfor %}
							</select>
						</div>

						<h2>Vos happy hours</h2>

						<div class="col-xs-6 col-sm-6 col-md-6">
							<select class="promotion-qt-picker height40" data-day="{{ today }}">
								<option value="{{ bar.promotion.promotionArray[today]['happy-hour'].value }}">{{ bar.promotion.promotionArray[today]['happy-hour'].value }}%</option>
										{% for i in 2..6 %}
										    <option value="{{i}}0">{{i}}0%</option>
										{% endfor %}
							</select>
						</div>
						<div class="center col-xs-6 col-sm-6 col-md-6">
							<p>Horaires des happy hours</p>
							De
							<select class="promotion-qt-picker" data-day="{{ today }}">
								<option value="{{ bar.promotion.promotionArray[today]['happy-hour'].beginning }}">{{ bar.promotion.promotionArray[today]['happy-hour'].beginning }}h</option>
										{% for i in 0..23 %}
										    <option value="{{i}}">{{i}}h</option>
										{% endfor %}
							</select>
							à
							<select class="promotion-qt-picker" data-day="{{ today }}">
								<option value="{{ bar.promotion.promotionArray[today]['happy-hour'].ending }}">{{ bar.promotion.promotionArray[today]['happy-hour'].ending }}h</option>
										{% for i in 0..23 %}
										    <option value="{{i}}">{{i}}h</option>
										{% endfor %}
							</select>

							<br>
							<br>

							<p>Condition*</p>

							<select>
								{% set conditionPromo = {
									'1': ['aucune','Aucune'], 
									'2': ['accompagne','Venir accompagné'],
									'3': ['noChampagneAndLuxe','Hors champagne et alcools de luxe'],
								} %}

								{% for k in 1..3 %}
								<option value="{{conditionPromo[k][0]}}">{{conditionPromo[k][1]}}</option>
								{% endfor %}
							</select>
						</div>
						
					</div>
					
				</div>
				
					<div class="clear"></div>
			</div>
			<div class="infoPromoPro">
				<div class="col-xs-6 col-sm-6 col-md-6">
								<h4>IMPORTANT :</h4>
								<p>
									Je m'engage à offrir les verres promis sans réserves à tout clients muni d'une offre valide.
								</p>
							</div>

							<div class="col-xs-6 col-sm-6 col-md-6">
								<button>VALIDER</button>
							</div>
							<div class="clear"></div>
			</div>
		</div>
{% endblock %}
