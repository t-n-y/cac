{% extends "::basepro.html.twig" %}

{% block title %}CacBarBundle:Bar:show{% endblock %}

{% block body %}
		<div class="topBarPro col-xs-12 col-sm-12 col-md-12 noPadding">
			<img src="{{ asset('uploads/bar/'~bar.path) }}">
			<div class="infoNameBar">
				<h1>{{ bar.name }}</h1>
			</div>
		</div>

		<div class="onglets col-xs-12 col-sm-12 col-md-12 noPadding">
			<h2>Retour du jour<span></span></h2>
		</div>

		<div class="ongletsRetourOffre col-xs-12 col-sm-12 col-md-12 noPadding">
			<div class="center col-xs-4 col-sm-4 col-md-4 noPadding">
				<p>Hier</p>
				<p>Aujourd'hui</p>
			</div>
			<div class="center col-xs-4 col-sm-4 col-md-4 noPadding">
				<a href="javascript:window.location.reload()"><p>Actualiser</p></a>
			</div>
			<div class="center col-xs-4 col-sm-4 col-md-4 noPadding">
				<div class="feedbackSearch">
			 		<input type="text" id="userSearch" placeholder="Rechercher">
			 	</div>
			</div>
		</div>

		<script type="text/javascript">
			var d = new Date();
			var day = d.getDay();
		</script>

		<div class="col-xs-12 col-sm-12 col-md-12 noPadding toprint">
			<div class="overflowX noPadding">
				<div class="navRetourOffre col-xs-12 col-sm-12 col-md-12">
					<div class="col-xs-10 col-sm-10 col-md-10 noPadding">
						<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
							<p>Référence</p>
						</div>
						<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
							<p>Nom</p>
						</div>
						<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
							<p>Prénom</p>
						</div>
						<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
							<p>Etat</p>
						</div>
					</div>
				</div>

				<div class="allOffre">
					{% for promo in promos %}

						<div class="retourOffre col-xs-12 col-sm-12 col-md-12">

							{% if promo.etat == "validé" %}
								<div class="retourVerrePromotion offreValide col-xs-10 col-sm-10 col-md-10 noPadding">
							{% elseif promo.etat == "non validé" %}
								<div class="retourVerrePromotion offreNonValide col-xs-10 col-sm-10 col-md-10 noPadding">
							{% else %}	
								<div class="retourVerrePromotion col-xs-10 col-sm-10 col-md-10 noPadding">
							{% endif %}
							
								<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
									<p>{{promo.reference}}</p>
								</div>
								<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
									<p>{{promo.user.name}}</p>
								</div>
								<div class="col-xs-3 col-sm-3 col-md-3 noPadding">
									<p>{{promo.user.firstname}}</p>
								</div>
								<div class="statutOffre col-xs-3 col-sm-3 col-md-3 noPadding">
									{% if promo.etat == "validé" %}
										<p class="zone-etat-{{promo.id}}">
									{% elseif promo.etat == "non validé" %}
										<p class="zone-etat-{{promo.id}}">
									{% else %}
										<p class="zone-etat-{{promo.id}}">
									{% endif %}
										{{promo.etat}}</p>
								</div>
							</div>
							<div class="validationsOffre col-xs-2 col-sm-2 col-md-2 noPadding">
								<div class="validationOffre col-xs-6 col-sm-6 col-md-6 noPadding">
									<div class="validerOffre">
										{% if promo.etat == "validé" %}
											<p class="validate-promo offreValider" data-promo-id="{{promo.id}}">Utilisé</p>
										{% else %}
											<p class="validate-promo" data-promo-id="{{promo.id}}">Utilisé</p>
										{% endif %}
									</div>
								</div>
								<div class="noValidationOffre col-xs-6 col-sm-6 col-md-6 noPadding">

									<div class="noValiderOffre">
										{% if promo.etat == "non validé" %}
											<p class="invalidate-promo offrePasValider" data-promo-id="{{promo.id}}">Pas Vu</p>
										{% else %}
											<p class="invalidate-promo" data-promo-id="{{promo.id}}">Pas Vu</p>
										{% endif %}
									</div>
								</div>
							</div>
							
						</div>
					{% endfor %}
				</div>
			</div>
		</div>

		<button id="imprimer">imprimer</button>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
    <script src="{{ asset('js/quicksearch.js') }}" type="text/javascript" /></script>
	<script>
	$('#imprimer').on('click', function(){
		window.print();
	});
    $('input#userSearch').quicksearch('.retourOffre');
	</script>
{% endblock %}